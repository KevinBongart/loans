<%= simple_form_for(@loan) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :monthly_payment %>
    <%= f.input :first_payment_at %>
    <%= f.input :last_payment_at %>
    <%= f.association :bank %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
